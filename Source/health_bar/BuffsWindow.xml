<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="BuffIconTemplate" movable="false" layer="secondary">
			<Size>
				<AbsPoint x="42" y="42"/>
			</Size>
            
            <EventHandlers>
                <EventHandler event="OnInitialize" function="BuffsWindow.onBuffStart"/>
                <EventHandler event="OnShutdown" function="BuffsWindow.onBuffEnd"/>
                <EventHandler event="OnUpdate" function="BuffsWindow.onBuffUpdate"/>
                <EventHandler event="OnMouseOver" function="BuffsWindow.onBuffMouseOver"/>
                <EventHandler event="OnMouseOverEnd" function="BuffsWindow.onBuffMouseOverEnd"/>
            </EventHandlers>

			<Windows>
                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" />
                        <Anchor point="bottomright" relativePoint="bottomright" />
                    </Anchors>
                </FullResizeImage>

				<DynamicImage name="$parentIcon" handleinput="false" textureScale="1.2" layer="background">
					<Size>
						<AbsPoint x="38" y="38" />
					</Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center"/>
                    </Anchors>
				</DynamicImage>

				<Label name="$parentTime" font="inter_medium_14" maxchars="6" handleinput="false" autoresize="true" textalign="top">
					<Size>
						<AbsPoint x="38" y="14"/>
					</Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parentIcon"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentIcon"/>
                    </Anchors>
                    <Color r="206" g="217" b="242" a="255" />
				</Label>

                <FullResizeImage name="$parentTimeBackground" inherits="UO_Simple_Black_Background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentTime">
                            <AbsPoint x="-2" y="0"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame"/>
                    </Anchors>
                </FullResizeImage>
			</Windows>
		</Window>

        <Window name="BuffsWindow">
            <Size>
                <AbsPoint x="168" y="38"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="BuffsWindow.onInitialize"/>
                <EventHandler event="OnShutdown" function="BuffsWindow.onShutdown"/>
            </EventHandlers>
        </Window>
    </Windows>
</Interface>