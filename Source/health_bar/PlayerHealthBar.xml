<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="PlayerHealthBar" movable="true" draganddrop="true">
            <Size>
                <AbsPoint x="190" y="90" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="PlayerHealthBar.onInitialize"/>
                <EventHandler event="OnShutdown" function="PlayerHealthBar.onShutdown"/>
                <EventHandler event="OnRButtonUp" function="PlayerHealthBar.onRightClick"/>
            </EventHandlers>
            <Windows>
                <FullResizeImage name="$parentWindowBackground" inherits="UO_Simple_Black_Background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentStaminaBar">
                            <AbsPoint x="27" y="4"/>
                        </Anchor>
                    </Anchors>
                </FullResizeImage>

                <!-- Inner Frame Boilerplate -->
                <FullResizeImage name="$parentFrame" inherits="UO_Simple_Frame" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentWindowBackground"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentWindowBackground"/>
                    </Anchors>
                </FullResizeImage>
                <!-- End of Inner Frame Boilerplate -->

                <StatusBar name="$parentHealthBar" foreground="StatusBar" handleinput="false" alpha="0.5">
                    <Size>
                        <AbsPoint x="136" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="$parent">
                            <AbsPoint x="0" y="8"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <StatusBar name="$parentManaBar" foreground="StatusBar" handleinput="false" alpha="0.5">
                    <Size>
                        <AbsPoint x="136" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentHealthBar">
                            <AbsPoint y="-2" x="0"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <StatusBar name="$parentStaminaBar" foreground="StatusBar" handleinput="false" alpha="0.5">
                    <Size>
                        <AbsPoint x="136" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentManaBar"/>
                    </Anchors>
                </StatusBar>

                <Label name="$parentHealthBarPerc" font="uo_classic_14" maxchars="50" textalign="center" handleinput="false" wordwrap="false" linespacing="18" popable="false" layer="overlay">
                    <Size>
                        <AbsPoint x="130" y="10" />
                    </Size>
                    <Anchors>
                        <Anchor point="topcenter" relativePoint="topcenter" relativeTo="$parentHealthBar">
                            <AbsPoint x="5" y="3" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="255" b="255" a="255" />
                </Label>

                <Label name="$parentManaBarPerc" font="uo_classic_14" maxchars="50" textalign="center" handleinput="false" wordwrap="false" linespacing="18" popable="false" layer="overlay">
                    <Size>
                        <AbsPoint x="130" y="10" />
                    </Size>
                    <Anchors>
                        <Anchor point="topcenter" relativePoint="topcenter" relativeTo="$parentManaBar">
                            <AbsPoint x="5" y="3" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="255" b="255" a="255" />
                </Label>

                <Label name="$parentStaminaBarPerc" font="uo_classic_14" maxchars="50" textalign="center" handleinput="false" wordwrap="false" linespacing="18" popable="false" layer="overlay">
                    <Size>
                        <AbsPoint x="130" y="10" />
                    </Size>
                    <Anchors>
                        <Anchor point="topcenter" relativePoint="topcenter" relativeTo="$parentStaminaBar">
                            <AbsPoint x="5" y="3" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="255" b="255" a="255" />
                </Label>
            </Windows>
        </Window>
    </Windows>
</Interface>