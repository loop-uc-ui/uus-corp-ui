<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="RadarWindow" movable="true">
            <Size>
                <AbsPoint x="235" y="235"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonDown" function="RadarWindow.OnMouseDrag"/>
                <EventHandler event="OnInitialize" function="RadarWindow.Initialize"/>
                <EventHandler event="OnShutdown" function="RadarWindow.Shutdown"/>
                <EventHandler event="OnMouseWheel" function="RadarWindow.RadarOnMouseWheel"/>
            </EventHandlers>
            <Windows>
                <CircleImage name="$parentMap" numsegments="64" texturescale="1.0" layer="default" texture="radar_texture">
                    <Size>
                        <AbsPoint x="190" y="190"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" relativeTo="$parentRing">
                            <AbsPoint x="3" y="1"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords x="128" y="128"/>
                </CircleImage>

                <MaskWindow name="$parentMapMask">
                    <Size>
                        <AbsPoint x="160" y="160"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" relativeTo="$parentRing">
                            <AbsPoint x="3" y="1"/>
                        </Anchor>
                    </Anchors>
                </MaskWindow>

                <Button name="RadarWindowLock" inherits="LockButton" texturescale="1.1" layer="overlay">
                    <Size>
                        <AbsPoint x="25" y="25"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentRing">
                            <AbsPoint x="-70" y="20"/>
                        </Anchor>
                    </Anchors>
                </Button>

                <DynamicImage name="$parentRing" texture="hud_image" texturescale="1.1"
                              layer="default">
                    <Size>
                        <AbsPoint x="250" y="250"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords x="194" y="629"/>
                </DynamicImage>

                <Button name="RadarWindowToggleMapButton" inherits="UO_Default_Spring_Button" textalign="center"
                        font="UO_GoldButtonText" layer="overlay">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                            <AbsPoint x="80" y="15"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="RadarWindow.ToggleMap"/>
                        <EventHandler event="OnMouseOver" function="RadarWindow.ToggleMapOnMouseOver"/>
                    </EventHandlers>
                </Button>

                <FullResizeImage name="$parentSextantBackground" inherits="UO_Simple_Black_Background" layer="background"
                                 alpha="0.75">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentAreaInfo">
                            <AbsPoint x="0" y="-30"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="radarSextant">
                            <AbsPoint x="0" y="10"/>
                        </Anchor>
                    </Anchors>
                </FullResizeImage>

                <Label name="radarSextant" font="uo_classic_14" maxchars="64" textalign="bottom">
                    <Size>
                        <AbsPoint x="150" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentFacetInfo"/>
                    </Anchors>
                    <Color r="229" g="229" b="229" a="0"/>
                </Label>

                <Label name="$parentAreaInfo" font="uo_classic_14" maxchars="64" textalign="top">
                    <Size>
                        <AbsPoint x="150" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentMap">
                            <AbsPoint x="0" y="25"/>
                        </Anchor>
                    </Anchors>
                    <Color r="229" g="229" b="229" a="0"/>
                </Label>

                <Label name="$parentFacetInfo" font="uo_classic_14" maxchars="64" textalign="top">
                    <Size>
                        <AbsPoint x="150" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentAreaInfo">
                            <AbsPoint x="0" y="5"/>
                        </Anchor>
                    </Anchors>
                    <Color r="229" g="229" b="229" a="0"/>
                </Label>
            </Windows>
        </Window>
    </Windows>
</Interface>
