<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="RadarWindow" movable="true">
            <Size>
                <AbsPoint x="235" y="235"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonDown" function="RadarWindow.OnMouseDrag"/>
                <EventHandler event="OnRButtonUp" function="RadarWindow.Close"/>
                <EventHandler event="OnInitialize" function="RadarWindow.Initialize"/>
                <EventHandler event="OnShutdown" function="RadarWindow.Shutdown"/>
                <EventHandler event="OnMouseWheel" function="RadarWindow.RadarOnMouseWheel"/>
            </EventHandlers>
            <Windows>
                <MaskWindow name="$parentMapMask" layer="secondary" handleinput="true">
                    <Size>
                        <AbsPoint x="190" y="190"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" relativeTo="$parentRing">
                            <AbsPoint x="3" y="1"/>
                        </Anchor>
                    </Anchors>
                    <Windows>
                        <CircleImage name="RadarWindowMap" numsegments="64" texturescale="1.1" layer="overlay" texture="radar_texture" handleinput="true">
                            <Size>
                                <AbsPoint x="190" y="190"/>
                            </Size>
                            <Anchors>
                                <Anchor point="center" relativePoint="center" relativeTo="$parent"/>
                            </Anchors>
                            <TexCoords x="128" y="128"/>
                        </CircleImage>
                    </Windows>
                </MaskWindow>

                <Button name="RadarWindowLock" inherits="LockButton" texturescale="1.1" layer="overlay">
                    <Size>
                        <AbsPoint x="25" y="25"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentRing">
                            <AbsPoint x="-70" y="20"/>
                        </Anchor>
                    </Anchors>
                </Button>

                <DynamicImage name="$parentRing" texture="hud_image" texturescale="1.1" handleinput="true"
                              layer="default">
                    <Size>
                        <AbsPoint x="250" y="250"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords x="194" y="629"/>
                </DynamicImage>

                <Button name="RadarWindowToggleMapButton" inherits="UO_Default_Spring_Button" textalign="center"
                        font="UO_GoldButtonText" layer="overlay">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                            <AbsPoint x="80" y="15"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="RadarWindow.ToggleMap"/>
                        <EventHandler event="OnMouseOver" function="RadarWindow.ToggleMapOnMouseOver"/>
                    </EventHandlers>
                </Button>

                <FullResizeImage name="$parentAreaBackground" inherits="UO_Simple_Black_Background" layer="background"
                                 alpha="0.75">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentAreaInfo">
                            <AbsPoint x="0" y="-10"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentAreaInfo">
                            <AbsPoint x="0" y="10"/>
                        </Anchor>
                    </Anchors>
                </FullResizeImage>

                <FullResizeImage name="$parentSextantBackground" inherits="UO_Simple_Black_Background" layer="background"
                                 alpha="0.75">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="radarSextant">
                            <AbsPoint x="0" y="-10"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="radarSextant"/>
                    </Anchors>
                </FullResizeImage>

                <Label name="radarSextant" font="footnote" maxchars="64" textalign="center">
                    <Size>
                        <AbsPoint x="148" y="36"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentRing">
                            <AbsPoint x="3" y="-10"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>
    </Windows>
</Interface>
