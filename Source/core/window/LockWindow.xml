<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Interface.xsd">
    <Scripts>
        <Script file="LockWindow.lua" />
    </Scripts>

    <Windows>
        <Button name="LockButton" layer="popup" textureScale="1">
            <Size>
                <AbsPoint x="20" y="20"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="LockWindow.toggleLock"/>
            </EventHandlers>
            <Anchors>
                <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                    <AbsPoint x="0" y="0"/>
                </Anchor>
            </Anchors>
        </Button>
    </Windows>
</Interface>