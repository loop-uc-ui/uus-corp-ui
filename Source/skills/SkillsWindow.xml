<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="SkillsWindow.lua"/>
	</Scripts>
	<Windows>
		<Window name="SkillsWindow" movable="true">
			<Size>
				<AbsPoint x="512" y="512" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>

			<Windows>
				<FullResizeImage name="SkillsBackground" texture="TMapBG">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft"/>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
					<Sizes>
						<TopLeft x="70" y="70" />
						<BottomRight x="70" y="70" />
						<Middle x="70" y="70" />
					</Sizes>
					<TexCoords>
						<TopLeft x="0" y="0" />
						<TopCenter x="70" y="0" />
						<TopRight x="140" y="0" />
						<MiddleLeft x="0" y="70" />
						<MiddleCenter x="70" y="70" />
						<MiddleRight x="140" y="70" />
						<BottomLeft x="0" y="140" />
						<BottomCenter x="70" y="140" />
						<BottomRight x="140" y="140" />
					</TexCoords>
				</FullResizeImage>

				<Label name="$parentNameLabel" inherits="UO_Default_Label_Color"
					   font="body" autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="48" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="24" y="12"/>
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentNameSortButton" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentNameLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="SkillsWindow.OnNameSort"/>
					</EventHandlers>
				</Button>

				<Label name="$parentRealLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="48" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentNameSortButton">
							<AbsPoint x="112" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentRealSortButton" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentRealLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="SkillsWindow.OnRealSort"/>
					</EventHandlers>
				</Button>

				<Label name="$parentBaseLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="42" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentRealSortButton">
							<AbsPoint x="20" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentBaseSortButton" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentBaseLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="SkillsWindow.OnBaseSort"/>
					</EventHandlers>
				</Button>

				<Label name="$parentCapLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay" >
					<Size>
						<AbsPoint x="36" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentBaseSortButton">
							<AbsPoint x="32" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentCapSortButton" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCapLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="SkillsWindow.OnCapSort"/>
					</EventHandlers>
				</Button>

				<ScrollWindow name="SkillsScrollWindow" childscrollwindow="SkillsWindowScrollChild"
							  scrollbar="SkillsScrollWindowScrollbar" autoHideScrollBar="false">
					<Size>
						<AbsPoint x="512" y="512" />
					</Size>
					<Anchors>
						<Anchor point="center" relativePoint="center" />
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnInitialize" function="SkillsWindow.Initialize" />
						<EventHandler event="OnShutdown" function="SkillsWindow.Shutdown" />
					</EventHandlers>
					<Windows>
						<VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft">
									<AbsPoint x="-11" y="24"/>
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright">
									<AbsPoint x="0" y="-24"/>
								</Anchor>
							</Anchors>
						</VerticalScrollbar>

						<Window name="SkillsWindowScrollChild" >
							<Size>
								<AbsPoint x="468" y="512" />
							</Size>
							<Windows>
								<FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background" alpha="0.50">
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft" relativeTo="SkillsScrollWindow"/>
										<Anchor point="bottomright" relativePoint="bottomright" relativeTo="SkillsScrollWindow"/>
									</Anchors>
								</FullResizeImage>

								<Window name="Skills">
									<Size>
										<AbsPoint x="512" y="1920"/>
									</Size>
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft">
											<AbsPoint x="24" y="48"/>
										</Anchor>
									</Anchors>
								</Window>
							</Windows>
						</Window>
					</Windows>
				</ScrollWindow>
			</Windows>
		</Window>
	</Windows>
</Interface>