<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
		<ScrollWindow name="SkillsWindow" movable="true" childscrollwindow="SkillsWindowScrollChild"
					  scrollbar="SkillsWindowScrollbar" autoHideScrollBar="false">
			<Size>
				<AbsPoint x="512" y="512" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="SkillsWindow.Initialize" />
				<EventHandler event="OnShutdown" function="SkillsWindow.Shutdown" />
			</EventHandlers>
			<Windows>
				<FullResizeImage name="SkillsBackground" texture="TMapBG" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft"/>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
					<Sizes>
						<TopLeft x="70" y="70" />
						<BottomRight x="70" y="70" />
						<Middle x="70" y="70" />
					</Sizes>
					<TexCoords>
						<TopLeft x="0" y="0" />
						<TopCenter x="70" y="0" />
						<TopRight x="140" y="0" />
						<MiddleLeft x="0" y="70" />
						<MiddleCenter x="70" y="70" />
						<MiddleRight x="140" y="70" />
						<BottomLeft x="0" y="140" />
						<BottomCenter x="70" y="140" />
						<BottomRight x="140" y="140" />
					</TexCoords>
				</FullResizeImage>

				<Label name="SkillsWindowNameLabel" inherits="UO_Default_Label_Color" font="body"
					   handleinput="false" autoresize="true" textalign="center">
					<Size>
						<AbsPoint x="162" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="24" y="-24"/>
						</Anchor>
					</Anchors>
				</Label>

				<Label name="SkillsWindowRealLabel" inherits="UO_Default_Label_Color" font="body"
					   handleinput="false" autoresize="true" textalign="center">
					<Size>
						<AbsPoint x="76" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="SkillsWindowNameLabel">
							<AbsPoint x="10" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Label name="SkillsWindowBaseLabel" inherits="UO_Default_Label_Color" font="body"
					   handleinput="false" autoresize="true" textalign="center">
					<Size>
						<AbsPoint x="76" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="SkillsWindowRealLabel">
							<AbsPoint x="10" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Label name="SkillsWindowCapLabel" inherits="UO_Default_Label_Color" font="body"
					   handleinput="false" autoresize="true" textalign="center">
					<Size>
						<AbsPoint x="76" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="SkillsWindowBaseLabel">
							<AbsPoint x="10" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft">
							<AbsPoint x="-11" y="24"/>
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright">
							<AbsPoint x="0" y="-24"/>
						</Anchor>
					</Anchors>
				</VerticalScrollbar>

				<Window name="SkillsWindowScrollChild">
					<Size>
						<AbsPoint x="468" y="512" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="24" y="48"/>
						</Anchor>
					</Anchors>
					<Windows>
						<FullResizeImage name="$parentTimerLabelBackground" inherits="UO_Simple_Black_Background" alpha="0.33">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="SkillsWindow"/>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="SkillsWindow"/>
							</Anchors>
						</FullResizeImage>

						<Window name="Skills">
							<Size>
								<AbsPoint x="512" y="1920"/>
							</Size>
						</Window>
					</Windows>
				</Window>
			</Windows>
		</ScrollWindow>

	</Windows>
</Interface>