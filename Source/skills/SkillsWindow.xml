<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="SkillsWindow.lua"/>
	</Scripts>
	<Windows>
		<Window name="SkillsWindow" movable="true">
			<Size>
				<AbsPoint x="512" y="512" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="SkillsWindow.Initialize" />
				<EventHandler event="OnUpdate" function="SkillsWindow.onUpdate" />
			</EventHandlers>
			<Windows>
				<FullResizeImage name="SkillsBackground" texture="TMapBG" layer="background">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft"/>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
					<Sizes>
						<TopLeft x="70" y="70" />
						<BottomRight x="70" y="70" />
						<Middle x="70" y="70" />
					</Sizes>
					<TexCoords>
						<TopLeft x="0" y="0" />
						<TopCenter x="70" y="0" />
						<TopRight x="140" y="0" />
						<MiddleLeft x="0" y="70" />
						<MiddleCenter x="70" y="70" />
						<MiddleRight x="140" y="70" />
						<BottomLeft x="0" y="140" />
						<BottomCenter x="70" y="140" />
						<BottomRight x="140" y="140" />
					</TexCoords>
				</FullResizeImage>

				<HorizontalResizeImage name="$parentColumnBar" texture="WindowTitle" layer="popup">
					<Size>
						<AbsPoint x="10" y="26" />
					</Size>
					<Sizes left="8" middle="80" right="8" />
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
						<Anchor point="topright" relativePoint="topright" relativeTo="$parent"/>
					</Anchors>
					<TexCoords>
						<Left x="55" y="0" />
						<Middle x="55" y="0" />
						<Right x="55" y="0" />
					</TexCoords>
				</HorizontalResizeImage>

				<Label name="$parentNameLabel" inherits="UO_Default_Label_Color"
					   font="body" autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="48" y="48" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="24" y="4"/>
						</Anchor>
					</Anchors>
				</Label>

				<Window name="$parentNameSortWindow" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentNameLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Window>

				<Label name="$parentRealLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="48" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentNameSortWindow">
							<AbsPoint x="112" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Window name="$parentRealSortWindow" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentRealLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Window>

				<Label name="$parentBaseLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay">
					<Size>
						<AbsPoint x="42" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentRealSortWindow">
							<AbsPoint x="20" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Window name="$parentBaseSortWindow" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentBaseLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Window>

				<Label name="$parentCapLabel" inherits="UO_Default_Label_Color" font="body"
					   autoresize="true" textalign="leftcenter" layer="overlay" >
					<Size>
						<AbsPoint x="36" y="48" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentBaseSortWindow">
							<AbsPoint x="48" y="0"/>
						</Anchor>
					</Anchors>
				</Label>

				<Window name="$parentCapSortWindow" layer="overlay">
					<Size>
						<AbsPoint x="22" y="22" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCapLabel">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Window>

				<ScrollWindow name="SkillsScrollWindow" childscrollwindow="SkillsWindowScrollChild"
							  scrollbar="SkillsScrollWindowScrollbar" autoHideScrollBar="true" lineheight="60"
							  moveable="false" draganddrop="true" popable="false" layer="default">
					<Size>
						<AbsPoint x="512" y="512" />
					</Size>
					<Anchors>
						<Anchor point="center" relativePoint="center" />
					</Anchors>
					<Windows>
						<VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll" layer="overlay">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft">
									<AbsPoint x="-11" y="36"/>
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright">
									<AbsPoint x="0" y="-24"/>
								</Anchor>
							</Anchors>
						</VerticalScrollbar>

						<Window name="SkillsWindowScrollChild" popable="false" draganddrop="true">
							<Size>
								<AbsPoint x="468" y="512" />
							</Size>
							<Windows>
								<FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background" handleinput="true" layer="background" alpha="0.50">
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft" relativeTo="SkillsScrollWindow"/>
										<Anchor point="bottomright" relativePoint="bottomright" relativeTo="SkillsScrollWindow"/>
									</Anchors>
								</FullResizeImage>

								<Window name="Skills">
									<Size>
										<AbsPoint x="512" y="1920"/>
									</Size>
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft">
											<AbsPoint x="24" y="36"/>
										</Anchor>
									</Anchors>
								</Window>
							</Windows>
						</Window>
					</Windows>
				</ScrollWindow>
			</Windows>
		</Window>
	</Windows>
</Interface>