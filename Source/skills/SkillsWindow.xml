<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
        <Button name="SkillsRowTemplate" font="uo_classic_18">
            <Windows>
                <Label name="$parentItemName" font="uo_classic_18">
                    <Size>
                        <AbsPoint x="200" y="35" />
                    </Size>
                </Label>

                <Label name="$parentItemRealValue" font="uo_classic_18">
                    <Size>
                        <AbsPoint x="200" y="35" />
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentItemName"/>
                    </Anchors>
                </Label>
            </Windows>
        </Button>

		<Window name="SkillsWindow" movable="true" handleinput="true">
			<Size>
				<AbsPoint x="800" y="660" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="SkillsWindow.Initialize" />
				<EventHandler event="OnShutdown" function="SkillsWindow.Shutdown" />
			</EventHandlers>
			<Windows>
				<FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                </FullResizeImage>

                <FullResizeImage name="$parentFrame" inherits="UO_Simple_Frame" layer="background" frameonly="true">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentList"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentList" />
                    </Anchors>
                </FullResizeImage>
                
                <ListBox name="$parentList" rowdef="SkillsRowTemplate" visiblerows="20" rowcount="57" rowspacing="20" scrollbar="$parentScrollbar">
                    <Size>
                        <AbsPoint x="800" y="660" />
                    </Size>

                    <ListData table="SkillsWindow.Skills" populationfunction="SkillsWindow.Populate">
                        <ListColumns>
                             <ListColumn windowname="ItemName" variable="skillName" format="wstring"/>
                             <ListColumn windowname="ItemRealValue" variable="realValue" format="string"/>
                        </ListColumns>
                         <Windows>
                            <VerticalScrollbar name="$parentScrollbar"  up="StandardVertScrollUpBtn" down="StandardVertScrollDownBtn" thumb="StandardVertScrollThumb">
                                <ThumbOffset x="0" y="0" />
                                <Anchors>
                                    <Anchor point="topright" relativePoint="topleft"/>
                                    <Anchor point="bottomright" relativePoint="bottomright" />
                                </Anchors>
                            </VerticalScrollbar>
                         </Windows>
                     </ListData>
                </ListBox>
			</Windows>
		</Window>

	</Windows>
</Interface>