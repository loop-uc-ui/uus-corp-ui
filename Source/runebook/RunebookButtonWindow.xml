    <Windows>
        <!-- Trammel Template -->
        <Window name="LegacyPurpleRuneTemplate" layer="overlay">
            <Size>
                <AbsPoint x="230" y="20"/>
            </Size>
            <Windows>
                <Button name="$parentIcon" inherits="LegacyPurpleDiamond">
                    <Size>
                        <AbsPoint x="17" y="17"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="LegacyRunebook.OnRuneClicked"/>
                    </EventHandlers>
                </Button>

                <Label name="$parentName" font="UO_DefaultText" maxchars="64" textalign="left">
                    <Size>
                        <AbsPoint x="175" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentIcon">
                            <AbsPoint x="3" y="1"/>
                        </Anchor>
                    </Anchors>
                    <Color r="73" g="0" b="146" a="255"/>
                </Label>
            </Windows>
            <EventHandlers>
                <EventHandler event="OnLButtonDown" function="LegacyRunebook.OnRuneClicked"/>
            </EventHandlers>
        </Window>

