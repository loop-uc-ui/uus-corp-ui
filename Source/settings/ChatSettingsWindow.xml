<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="ChatSettingsWindow" inherits="SettingsPageTemplate">
            <Windows>
                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" layer="background" frameonly="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
                </FullResizeImage>

                <Window name="$parentPage" layer="default">
                    <Size>
                        <AbsPoint x="580" y="540"/>
                    </Size>

                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentFrame">
                            <AbsPoint x="18" y="36"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame">
                            <AbsPoint x="-36" y="36"/>
                        </Anchor>
                    </Anchors>

                    <Windows>
                        <Button name="$parentDisableSpellsCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="topleft" relativePoint="topleft">
                                    <AbsPoint x="0" y="0"/>
                                </Anchor>
                            </Anchors>
                        </Button>

                        <Button name="$parentShowSpellNameCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentDisableSpellsCheckBox">
                                    <AbsPoint x="0" y="18"/>
                                </Anchor>
                            </Anchors>
                        </Button>

                        <Button name="$parentDisablePoisonTextCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentShowSpellNameCheckBox">
                                    <AbsPoint x="0" y="18"/>
                                </Anchor>
                            </Anchors>
                        </Button>

                        <Button name="$parentSaveJournalCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentDisablePoisonTextCheckBox">
                                    <AbsPoint x="0" y="18"/>
                                </Anchor>
                            </Anchors>
                        </Button>
                    </Windows>
                </Window>
            </Windows>
        </Window>
    </Windows>
</Interface>