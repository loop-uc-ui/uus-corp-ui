<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="SoundSettingsWindow" inherits="SettingsPageTemplate">
            <Windows>
                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" layer="background" frameonly="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
                </FullResizeImage>

                <Window name="$parentPage" layer="default">
                    <Size>
                        <AbsPoint x="580" y="540"/>
                    </Size>

                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentFrame">
                            <AbsPoint x="18" y="36"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame">
                            <AbsPoint x="-36" y="36"/>
                        </Anchor>
                    </Anchors>

                    <Windows>
                        <Button name="$parentMasterVolumeCheckBox" inherits="SettingsCheckBoxTemplate"/>

                        <Window name="$parentMasterVolumeSlider" inherits="SettingsSliderTemplate">
                            <Anchors>
                                <Anchor point="right" relativePoint="left" relativeTo="$parentMasterVolumeCheckBox">
                                    <AbsPoint x="18" y="0"/>
                                </Anchor>
                            </Anchors>
                        </Window>

                        <Button name="$parentEffectsVolumeCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMasterVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>
                        
                        <Window name="$parentEffectsVolumeSlider" inherits="SettingsSliderTemplate">
                            <Anchors>
                                <Anchor point="right" relativePoint="left" relativeTo="$parentEffectsVolumeCheckBox">
                                    <AbsPoint x="18" y="0"/>
                                </Anchor>
                            </Anchors>
                        </Window>

                        <Button name="$parentMusicVolumeCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentEffectsVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>

                        <Window name="$parentMusicVolumeSlider" inherits="SettingsSliderTemplate">
                            <Anchors>
                                <Anchor point="right" relativePoint="left" relativeTo="$parentMusicVolumeCheckBox">
                                    <AbsPoint x="18" y="0"/>
                                </Anchor>
                            </Anchors>
                        </Window>

                        <Button name="$parentToggleFootstepsCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMusicVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>
                    </Windows>
                </Window>
            </Windows>
        </Window>
    </Windows>
</Interface>