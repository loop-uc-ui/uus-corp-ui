<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Window name="VolumeSliderItemTemplate">
			<Size>
				<AbsPoint x="580" y="36" />
			</Size>
			<Windows>
				<Label name="$parentText" inherits="SettingsLabelTemplate" wordwrap="true">
					<Size>
                        <AbsPoint x="175" y="0" />
                    </Size>
                    <Color r="206" g="217" b="242" a="255"/>
				</Label>

                <Button name="$parentToggleButton" inherits="UO_Default_Check_Button">
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentText"/>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="SoundSettingsWindow.onSoundSettingChecked"/>
                    </EventHandlers>
                </Button>

				<SliderBar name="$parentSliderBar" inherits="UO_Default_Horizontal_SliderBar">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentText">
							<AbsPoint x="48" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnSlide" function="SoundSettingsWindow.onVolumeSlide" />
					</EventHandlers>
				</SliderBar>
    
				<Label name="$parentVal" inherits="SettingsLabelTemplate" wordwrap="true">
					<Size>
						<AbsPoint x="40" y="20"/>
					</Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentSliderBar">
							<AbsPoint x="20" y="0" />
						</Anchor>
					</Anchors>
                    <Color r="206" g="217" b="242" a="255"/>
				</Label>
			</Windows>
		</Window>

        <Window name="SoundSettingsWindow" inherits="SettingsPageTemplate">
            <Windows>
                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" layer="background" frameonly="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
                </FullResizeImage>

                <Window name="$parentPage" layer="default">
                    <Size>
                        <AbsPoint x="580" y="540"/>
                    </Size>

                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentFrame">
                            <AbsPoint x="18" y="36"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame">
                            <AbsPoint x="-36" y="36"/>
                        </Anchor>
                    </Anchors>

                    <Windows>
                        <Button name="$parentMasterVolumeCheckBox" inherits="SettingsCheckBoxTemplate"/>

                        <Button name="$parentEffectsVolumeCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMasterVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>
                        
                        <Button name="$parentMusicVolumeCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentEffectsVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>

                        <Button name="$parentToggleFootstepsCheckBox" inherits="SettingsCheckBoxTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMusicVolumeCheckBox">
                                    <AbsPoint x="0" y="12" />
                                </Anchor>
                            </Anchors>
                        </Button>
                    </Windows>
                </Window>
            </Windows>
        </Window>
    </Windows>
</Interface>