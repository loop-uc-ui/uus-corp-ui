<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Button name="KeybindingRowTemplate">
            <Size>
                <AbsPoint x="500" y="24" />
            </Size>
            <Windows>
                <Label name="$parentItemLabel" inherits="SettingsLabelTemplate" wordwrap="true">
                    <Size>
                        <AbsPoint x="270" y="24"/>
                    </Size>
                </Label>

                <Label name="$parentItemValue" inherits="SettingsLabelTemplate" wordwrap="true">
                    <Size>
                        <AbsPoint x="218" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentItemLabel">
                            <AbsPoint x="12" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>

            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="ControlsSettingsWindow.onKeybindingClick"/>
            </EventHandlers>
        </Button>

        <Window name="ControlsSettingsWindow" inherits="SettingsPageTemplate">
            <Windows>
                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" layer="background" frameonly="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
                </FullResizeImage>

                <Window name="$parentPage" layer="default">
                    <Size>
                        <AbsPoint x="500" y="500"/>
                    </Size>

                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentFrame">
                            <AbsPoint x="18" y="36"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame">
                            <AbsPoint x="-36" y="36"/>
                        </Anchor>
                    </Anchors>

                    <Windows>
                        <Window name="$parentScrollUpCombo" inherits="SettingsComboTemplate"/>

                        <Window name="$parentScrollDownCombo" inherits="SettingsComboTemplate">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentScrollUpCombo">
                                    <AbsPoint x="0" y="18"/>
                                </Anchor>
                            </Anchors>
                        </Window>

                        <ListBox name="$parentList" rowdef="KeybindingRowTemplate" visiblerows="17" rowcount="57" rowspacing="2" scrollbar="$parentScrollbar">
                            <Size>
                                <AbsPoint x="500" y="440" />
                            </Size>
    
                            <EventHandlers>
                                <EventHandler event="OnInitialize" function="ControlsSettingsWindow.onInitialize"/>
                                <EventHandler event="OnShutdown" function="ControlsSettingsWindow.onShutdown"/>
                            </EventHandlers>

                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentScrollDownCombo">
                                    <AbsPoint x="0" y="24"/>
                                </Anchor>
                            </Anchors>
                            <ListData table="ControlsSettingsWindow.Keybindings" populationfunction="ControlsSettingsWindow.onPopulateKeybindings">
                                <ListColumns>
                                     <ListColumn windowname="ItemLabel" variable="label" format="wstring"/>
                                     <ListColumn windowname="ItemValue" variable="value" format="wstring"/>
                                </ListColumns>
                             </ListData>
                             <VerticalScrollbar name="$parentScrollbar" up="StandardVertScrollUpBtn" down="StandardVertScrollDownBtn" thumb="StandardVertScrollThumb">
                                 <Anchors>
                                     <Anchor point="bottomright" relativePoint="bottomright"/>
                                 </Anchors>
                            </VerticalScrollbar>
                        </ListBox>
                    </Windows>
                </Window>
            </Windows>
        </Window>
    </Windows>
</Interface>