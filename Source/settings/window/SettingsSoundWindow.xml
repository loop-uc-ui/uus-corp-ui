<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Interface.xsd">
    <Scripts>
        <Script file="SettingsSoundWindow.lua"/>
        <Script file="SettingsWindow.lua"/>
    </Scripts>
    <Windows>
        <Window name="VolumeSliderItemTemplate">
            <Size>
                <AbsPoint x="600" y="61"/>
            </Size>
            <Windows>
                <Window name="$parentToggle" inherits="Settings_LabelCheckButton">
                    <Size>
                        <AbsPoint x="145" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                    </Anchors>
                </Window>
                <Label name="$parentText" font="UO_DefaultText" maxchars="64" textalign="left">
                    <Size>
                        <AbsPoint x="130" y="16"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentToggle">
                            <AbsPoint x="26" y="9"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnMouseOver" function="SettingsWindow.LabelOnMouseOver"/>
                    </EventHandlers>
                    <Color r="255" g="255" b="255" a="255"/>
                </Label>
                <SliderBar name="$parentSliderBar" inherits="UO_Default_Horizontal_SliderBar">
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentText">
                            <AbsPoint x="170" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnSlide" function="SettingsSoundWindow.UpdateVolumeSliderSettings"/>
                    </EventHandlers>
                </SliderBar>
                <Label name="$parentVal" font="UO_DefaultText" maxchars="64" textalign="right">
                    <Size>
                        <AbsPoint x="40" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentSliderBar">
                            <AbsPoint x="20" y="0"/>
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="255" b="255" a="255"/>
                </Label>
            </Windows>
        </Window>

        <ScrollWindow name="SettingsSoundWindow" childscrollwindow="SettingsSoundWindowScrollChild"
                      scrollbar="SettingsSoundWindowScrollbar" lineheight="18" autoHideScrollBar="true">
            <Size>
                <AbsPoint x="710" y="456"/>
            </Size>
            <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentGraphicsTabButton">
                    <AbsPoint x="0" y="10"/>
                </Anchor>
            </Anchors>
            <Windows>
                <VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll"/>

                <Window name="$parentScrollChild">
                    <Size>
                        <AbsPoint x="695" y="456"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                    </Anchors>
                    <Windows>

                        <!--Sound -->
                        <Window name="SettingsSound">
                            <Size>
                                <AbsPoint x="695" y="300"/>
                            </Size>
                            <Windows>

                                <Window name="$parentSoundSubSection" inherits="SubSectionLabelTemplate">
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft">
                                            <AbsPoint x="35" y="30"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="MasterVolume" inherits="VolumeSliderItemTemplate">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentSoundSubSection">
                                            <AbsPoint x="0" y="32"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="EffectsVolume" inherits="VolumeSliderItemTemplate">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="MasterVolume">
                                            <AbsPoint x="0" y="12"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="MusicVolume" inherits="VolumeSliderItemTemplate">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="EffectsVolume">
                                            <AbsPoint x="0" y="12"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="PlayFootstepsToggle" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="150" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="MusicVolume">
                                            <AbsPoint x="0" y="12"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                            </Windows>
                        </Window>
                    </Windows>
                </Window>
            </Windows>
        </ScrollWindow>
    </Windows>
</Interface>