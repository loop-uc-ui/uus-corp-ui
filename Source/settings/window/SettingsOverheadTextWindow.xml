<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Interface.xsd">
    <Scripts>
        <Script file="SettingsOverheadText.lua"/>
        <Script file="SettingsWindow.lua"/>
    </Scripts>
    <Windows>
        <ScrollWindow name="OverheadTextSettingsWindow"
                      childscrollwindow="OverheadTextSettingsWindowScrollChild"
                      scrollbar="OverheadTextSettingsWindowScrollbar" lineheight="18" autoHideScrollBar="true">
            <Size>
                <AbsPoint x="710" y="456"/>
            </Size>
            <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentGraphicsTabButton">
                    <AbsPoint x="0" y="10"/>
                </Anchor>
            </Anchors>
            <Windows>
                <VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll"/>

                <Window name="$parentScrollChild">
                    <Size>
                        <AbsPoint x="695" y="456"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                    </Anchors>
                    <Windows>
                        <Window name="OverheadTextOptions">
                            <Size>
                                <AbsPoint x="695" y="1250"/>
                            </Size>
                            <Windows>
                                <Window name="$parentOTSubSection" inherits="SubSectionLabelTemplate">
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft">
                                            <AbsPoint x="35" y="30"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>
                                <!-- Show Names Selection -->
                                <Label name="SettingsOptionsShowNamesLabel" inherits="Settings_ItemTitle">
                                    <Size>
                                        <AbsPoint x="115" y="20"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentOTSubSection">
                                            <AbsPoint x="26" y="60"/>
                                        </Anchor>
                                    </Anchors>
                                    <Color r="255" g="255" b="255" a="255"/>
                                </Label>
                                <ComboBox name="SettingsOptionsShowNamesCombo" inherits="UO_Default_ComboBox">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topleft"
                                                relativeTo="SettingsOptionsShowNamesLabel">
                                            <AbsPoint x="180" y="-10"/>
                                        </Anchor>
                                    </Anchors>
                                </ComboBox>

                                <Window name="ShowCorpseNames" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="190" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="SettingsOptionsShowNamesLabel">
                                            <AbsPoint x="-26" y="26"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="OverheadChat" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="150" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="ShowCorpseNames">
                                            <AbsPoint x="0" y="26"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <!-- Overhead Chat Window Fade Delay UI -->
                                <Label name="OverheadChatFadeDelayLabel" inherits="Settings_ItemTitle">
                                    <Size>
                                        <AbsPoint x="225" y="20"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="OverheadChat">
                                            <AbsPoint x="26" y="26"/>
                                        </Anchor>
                                    </Anchors>
                                    <Color r="255" g="255" b="255" a="255"/>
                                </Label>

                                <ComboBox name="OverheadChatFadeDelayCombo" inherits="UO_Default_ComboBox">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topleft"
                                                relativeTo="OverheadChatFadeDelayLabel">
                                            <AbsPoint x="70" y="-10"/>
                                        </Anchor>
                                    </Anchors>
                                </ComboBox>

                                <Window name="DisableSpells" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="270" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="OverheadChatFadeDelayLabel">
                                            <AbsPoint x="-26" y="32"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="ShowSpellName" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="250" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="DisableSpells">
                                            <AbsPoint x="0" y="26"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="noPoisonOthers" inherits="Settings_LabelCheckButton">
                                    <Size>
                                        <AbsPoint x="350" y="32"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="ShowSpellName">
                                            <AbsPoint x="0" y="26"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Button name="OverheadTextSizePlus" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="noPoisonOthers">
                                            <AbsPoint x="110" y="30"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp"
                                                      function="SettingsOverheadTextWindow.IncreaseTextSize"/>
                                    </EventHandlers>
                                </Button>

                                <Button name="OverheadTextSizeMinus" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft"
                                                relativeTo="OverheadTextSizePlus">
                                            <AbsPoint x="250" y="0"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp"
                                                      function="SettingsOverheadTextWindow.DecreaseTextSize"/>
                                    </EventHandlers>
                                </Button>

                                <Button name="OverheadChatFont" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="OverheadTextSizePlus">
                                            <AbsPoint x="-130" y="10"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp" function="SettingsOverheadTextWindow.ChatFont"/>
                                    </EventHandlers>
                                </Button>

                                <Button name="OverheadNamesFont" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topright"
                                                relativeTo="OverheadChatFont">
                                            <AbsPoint x="170" y="0"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp" function="SettingsOverheadTextWindow.NamesFont"/>
                                    </EventHandlers>
                                </Button>

                                <Button name="OverheadSpellFont" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topright"
                                                relativeTo="OverheadNamesFont">
                                            <AbsPoint x="170" y="0"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp" function="SettingsOverheadTextWindow.SpellFont"/>
                                    </EventHandlers>
                                </Button>

                                <Button name="OverheadDamageFont" inherits="UO_Default_Medium_Select_Button">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topright"
                                                relativeTo="OverheadSpellFont">
                                            <AbsPoint x="170" y="0"/>
                                        </Anchor>
                                    </Anchors>
                                    <EventHandlers>
                                        <EventHandler event="OnLButtonUp" function="SettingsOverheadTextWindow.DamageFont"/>
                                    </EventHandlers>
                                </Button>

                                <Window name="$parentColorsSubSection" inherits="SubSectionLabelTemplate">
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft"
                                                relativeTo="OverheadChatFont">
                                            <AbsPoint x="20" y="80"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorHeal" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentColorsSubSection">
                                            <AbsPoint x="0" y="62"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorCurse" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorHeal">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorPara" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorCurse">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorNeutral" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorPara">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>


                                <Window name="$parentcolorNeg" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentColorsSubSection">
                                            <AbsPoint x="350" y="62"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorPos" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorNeg">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorYou" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorPos">
                                            <AbsPoint x="0" y="44"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorPet" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorYou">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorEnemy" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorPet">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorPhys" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorNeutral">
                                            <AbsPoint x="0" y="130"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorFire" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorPhys">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorCold" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorFire">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorPois" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorEnemy">
                                            <AbsPoint x="0" y="50"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorEner" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorPois">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>

                                <Window name="$parentcolorChaos" inherits="Settings_ColorButton">
                                    <Anchors>
                                        <Anchor point="bottomleft" relativePoint="topleft"
                                                relativeTo="$parentcolorEner">
                                            <AbsPoint x="0" y="22"/>
                                        </Anchor>
                                    </Anchors>
                                </Window>
                            </Windows>
                        </Window>
                    </Windows>
                </Window>
            </Windows>
        </ScrollWindow>
    </Windows>
</Interface>