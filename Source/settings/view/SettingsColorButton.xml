<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Interface.xsd">
    <Scripts>
        <Script file="SettingsColorButton.lua"/>
        <Script file="Source/settings/settingswindow.lua"/>
    </Scripts>
    <Windows>
        <Window name="Settings_ColorButton">
            <Size>
                <AbsPoint x="350" y="32"/>
            </Size>
            <Windows>
                <DynamicImage name="$parentButton" inherits="ColorPickerWindowColorTemplate" alpha="1.0"
                              texturescale="0.5">
                    <EventHandlers>
                        <EventHandler event="OnLButtonDown" function="SettingsColorButton.PickColor"/>
                    </EventHandlers>
                </DynamicImage>
                <Label name="$parentLabel" font="UO_DefaultText" linespacing="20" autoresize="true" wordwrap="true"
                       maxchars="64" textalign="left">
                    <Color r="255" g="255" b="255" a="255"/>
                    <EventHandlers>
                        <EventHandler event="OnMouseOver" function="SettingsWindow.LabelOnMouseOver"/>
                    </EventHandlers>
                    <Size>
                        <AbsPoint x="700" y="16"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentButton">
                            <AbsPoint x="5" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>
    </Windows>
</Interface>