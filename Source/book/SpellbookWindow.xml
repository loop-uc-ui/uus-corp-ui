<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
		<Button name="SpellbookRowTemplate" font="inter_medium_16" highlighttexture="Menu_Selection" texturescale="2.0">
            <Size>
				<AbsPoint x="500" y="24" />
			</Size>

            <TexCoords>
                <NormalHighlit x="12" y="12"/>
                <PressedHighlit x="12" y="12"/>
            </TexCoords>

            <EventHandlers>
                <EventHandler event="OnLButtonDblClk" function="SpellbookWindow.onDoubleClick"/>
            </EventHandlers>
            <Windows>
                <Label name="$parentItemName" font="inter_medium_18" textalign="leftcenter">
                    <Size>
                        <AbsPoint x="200" y="24" />
                    </Size>
                    <Color r="206" g="217" b="242" a="255"/>
                </Label>
            </Windows>
        </Button>
		
		<Window name="Spellbook" movable="true" handleinput="true">
			<Size>
				<AbsPoint x="548" y="512" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="SpellbookWindow.onInitialize"/>
                <EventHandler event="OnShutdown" function="SpellbookWindow.onShutdown"/>
                <EventHandler event="OnRButtonUp" function="SpellbookWindow.onRightClick"/>
			</EventHandlers>
			<Windows>
                <FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                </FullResizeImage>

                <FullResizeImage name="$parentFrame" inherits="UO_Simple_Frame" layer="background" frameonly="true">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
                </FullResizeImage>

                <ScrollWindow name="$parentList" childscrollwindow="$parentScrollChild" scrollbar="$parentScrollbar" lineheight="39"  draganddrop="true" autoHideScrollBar="true" popable="false">
					<Size>
						<AbsPoint x="540" y="512" />
					</Size>
					<Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="8" y="12"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright">
                            <AbsPoint x="0" y="-8"/>
                        </Anchor>
					</Anchors>
					<Windows>
						<Window name ="$parentScrollChild" popable="false">
							<Size>
								<AbsPoint x="540" y="512"/>
							</Size>
						</Window>
						<VerticalScrollbar name="$parentScrollbar" up="StandardVertScrollUpBtn" down="StandardVertScrollDownBtn" thumb="StandardVertScrollThumb" gutter="StandardVertScrollGutter">
                            <Size>
                                <AbsPoint x="12" y="0" />
                            </Size>
                            <Anchors>
                                <Anchor point="topright" relativePoint="topright">
                                    <AbsPoint x="-14" y="0"/>
                                </Anchor>
                            </Anchors>
                            <ThumbOffset x="0" y="0" />
                            <ActiveZoneOffset x="500" y="500" />
                        </VerticalScrollbar>
					</Windows>
				</ScrollWindow>
			</Windows>
		</Window>
		
	</Windows>
</Interface>
