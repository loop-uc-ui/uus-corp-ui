<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
		<Button name="ContextMenuItemTemplate" texturescale="1.1" backgroundtexture="blackBg" font="UO_DefaultText" textalign="left" highlighttexture="blackBg">
	        <Size>
				<AbsPoint x="267" y="25" />
	        </Size>
			<Windows>
				<Label name="$parentItemText" font="UO_DefaultText">
					<Size>
						<AbsPoint x="267" y="25" />
					</Size>
				</Label>
			</Windows>
        </Button>	
		
		<Window name="ContextMenuWindow" movable="true" layer="popup">
			<Size>
				<AbsPoint x="275" y="200" />
			</Size>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="ContextMenuWindow.onInitialize" />
			</EventHandlers>
			<Windows>
				<!-- Body background -->
				<FullResizeImage name="$parentWindowBackground" inherits="UO_Simple_Black_Background">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft"/>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
				</FullResizeImage>

				<!-- Inner Frame Boilerplate -->
				<FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" >
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" />
						<Anchor point="bottomright" relativePoint="bottomright" />
					</Anchors>
				</FullResizeImage>
				<!-- End of Inner Frame Boilerplate -->

				<ListBox name="$parentList" rowdef="ContextMenuItemTemplate" visiblerows="20" rowcount="57" rowspacing="0">
                    <Size>
                        <AbsPoint x="500" y="500" />
                    </Size>

                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="8" y="8"/>
                        </Anchor>
                    </Anchors>
                    <ListData table="ContextMenuWindow.Data" populationfunction="ContextMenuWindow.populate">
                        <ListColumns>
                             <ListColumn windowname="ItemText" variable="text" format="wstring"/>
                        </ListColumns>
                     </ListData>
                </ListBox>
			</Windows>
		</Window>
	</Windows>
</Interface>
