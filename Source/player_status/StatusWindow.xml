<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>

        <HorizontalResizeImage name="StatusBar" texture="StatusBar" texturescale="1">
            <Size>
                <AbsPoint x="158" y="20"/>
            </Size>
            <Sizes left="0" middle="79" right="159"/>
            <TexCoords>
                <Left x="2" y="20"/>
                <Middle x="79" y="20"/>
                <Right x="158" y="20"/>
            </TexCoords>
        </HorizontalResizeImage>

        <Window name="StatusWindow" movable="true" layer="default" sticky="true" draganddrop="true" popable="true">
            <Size>
                <AbsPoint x="192" y="122" />
            </Size>

            <EventHandlers>
                <EventHandler event="OnInitialize" function="StatusWindow.Initialize"/>
                <EventHandler event="OnShutdown" function="StatusWindow.Shutdown"/>
                <EventHandler event="OnMouseWheel" function="WindowUtils.Scale"/>
                <EventHandler event="OnLButtonUp" function="StatusWindow.OnLButtonUp"/>
                <EventHandler event="OnLButtonDown" function="StatusWindow.OnLButtonDown"/>
                <EventHandler event="OnRButtonUp" function="StatusWindow.OnRButtonUp"/>
                <EventHandler event="OnLButtonDblClk" function="StatusWindow.OnMouseDoubleClick"/>
                <EventHandler event="OnUpdate" function="StatusWindow.UpdateStatus"/>
                <EventHandler event="OnShown" function="StatusWindow.OnShown"/>
            </EventHandlers>
            <Windows>

                <FullResizeImage name="$parentWindowBackground" layer="background" texture="TMapBG" handleinput="false" >
                    <Anchors>
							<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentFrame">
								<AbsPoint x="5" y="5" />
							</Anchor>
							<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrame">
								<AbsPoint x="0" y="0" />
							</Anchor>
					</Anchors>
                    <Sizes>
                        <TopLeft x="85" y="52" />
                        <BottomRight x="85" y="52" />
                        <Middle x="85" y="52" />
                    </Sizes>
                    <TexCoords>
                        <TopLeft x="5" y="20" />
                        <TopCenter x="81" y="20" />
                        <TopRight x="96" y="20" />
                        <MiddleLeft x="5" y="10" />
                        <MiddleCenter x="48" y="10" />
                        <MiddleRight x="96" y="10" />
                        <BottomLeft x="5" y="5" />
                        <BottomCenter x="48" y="5" />
                        <BottomRight x="95" y="5" />
                    </TexCoords>
                </FullResizeImage>

                <FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame" layer="background">
                    <Size>
                        <AbsPoint x="192" y="122" />
                    </Size>
                </FullResizeImage>

                <Button name="StatusWindowLock" inherits="LockButton">
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentFrame">
                            <AbsPoint x="-4" y="4"/>
                        </Anchor>
                    </Anchors>
                </Button>
                
                <Button name="$parentRedButton" backgroundtexture="healB" highlighttexture="healB" texturescale="1">
                    <Size>
                        <AbsPoint x="17" y="17"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="16" y="8"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords>
                        <Normal x="0" y="0"/>
                        <NormalHighlit x="18" y="0"/>
                        <Pressed x="18" y="0"/>
                        <PressedHighlit x="18" y="0"/>
                    </TexCoords>
                    <EventHandlers>
                        <EventHandler event="OnRButtonUp" function="PartyHealthBar.Button_OnRButtonUp"/>
                        <EventHandler event="OnLButtonUp" function="PartyHealthBar.RedButton_OnLButtonUp"/>
                        <EventHandler event="OnMouseOver" function="PartyHealthBar.RedButton_OnMouseOver"/>
                        <EventHandler event="OnMouseOverEnd" function="PartyHealthBar.OnMouseOverEnd"/>
                    </EventHandlers>
                </Button>
                <Button name="$parentGreenButton" backgroundtexture="cureB" highlighttexture="cureB" texturescale="1">
                    <Size>
                        <AbsPoint x="17" y="17"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentRedButton">
                            <AbsPoint x="20" y="0"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords>
                        <Normal x="0" y="0"/>
                        <NormalHighlit x="18" y="0"/>
                        <Pressed x="18" y="0"/>
                        <PressedHighlit x="18" y="0"/>
                    </TexCoords>
                    <EventHandlers>
                        <EventHandler event="OnRButtonUp" function="PartyHealthBar.Button_OnRButtonUp"/>
                        <EventHandler event="OnLButtonUp" function="PartyHealthBar.GreenButton_OnLButtonUp"/>
                        <EventHandler event="OnMouseOver" function="PartyHealthBar.GreenButton_OnMouseOver"/>
                        <EventHandler event="OnMouseOverEnd" function="PartyHealthBar.OnMouseOverEnd"/>

                    </EventHandlers>
                </Button>
                <Button name="$parentBlueButton" backgroundtexture="invisB" highlighttexture="invisB" texturescale="1">
                    <Size>
                        <AbsPoint x="17" y="17"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentGreenButton">
                            <AbsPoint x="20" y="0"/>
                        </Anchor>
                    </Anchors>
                    <TexCoords>
                        <Normal x="0" y="0"/>
                        <NormalHighlit x="18" y="0"/>
                        <Pressed x="18" y="0"/>
                        <PressedHighlit x="18" y="0"/>
                    </TexCoords>
                    <EventHandlers>
                        <EventHandler event="OnRButtonUp" function="PartyHealthBar.Button_OnRButtonUp"/>
                        <EventHandler event="OnRButtonUp" function="PartyHealthBar.BlueButton_OnRButtonUp"/>
                        <EventHandler event="OnLButtonUp" function="PartyHealthBar.BlueButton_OnLButtonUp"/>
                        <EventHandler event="OnMouseOver" function="PartyHealthBar.BlueButton_OnMouseOver"/>
                        <EventHandler event="OnMouseOverEnd" function="PartyHealthBar.OnMouseOverEnd"/>

                    </EventHandlers>
                </Button>

                <StatusBar name="$parentHealthBar" foreground="StatusBar" handleinput="false">
                    <Size>
                        <AbsPoint x="159" y="7"/>
                    </Size>
                    <Anchors>
                        <Anchor point="leftcenter" relativePoint="leftcenter" relativeTo="$parent">
                            <AbsPoint x="16" y="36"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <StatusBar name="$parentManaBar" foreground="StatusBar" handleinput="false">
                    <Size>
                        <AbsPoint x="159" y="7"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentHealthBar"
                                handleinput="false">
                            <AbsPoint x="0" y="24"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <StatusBar name="$parentStaminaBar" foreground="StatusBar" handleinput="false">
                    <Size>
                        <AbsPoint x="159" y="7"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentManaBar">
                            <AbsPoint x="0" y="24"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <Label name="$parentHealthTooltip" font="caption"
                       maxchars="100" textalign="center" autoresize="true" wordwrap="true" layer="secondary"
                       handleinput="false">
                    <Size>
                        <AbsPoint x="100" y="60"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentHealthBar">
                            <AbsPoint x="-24" y="2"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <Label name="$parentManaTooltip" font="caption"
                       maxchars="100" textalign="center" autoresize="true" wordwrap="true" layer="secondary"
                       handleinput="false">
                    <Size>
                        <AbsPoint x="100" y="60"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentManaBar">
                            <AbsPoint x="-24" y="2"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <Label name="$parentStaminaTooltip" font="caption"
                       maxchars="100" textalign="center" autoresize="true" wordwrap="true" layer="secondary"
                       handleinput="false">
                    <Size>
                        <AbsPoint x="100" y="60"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentStaminaBar">
                            <AbsPoint x="-24" y="2"/>
                        </Anchor>
                    </Anchors>
                </Label>

            </Windows>
        </Window>

    </Windows>
</Interface>
